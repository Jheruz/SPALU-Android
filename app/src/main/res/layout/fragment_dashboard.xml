<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.laguna.university.studentperformanceanalytics.DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@drawable/dashboard"
                android:gravity="center_vertical|center_horizontal"
                android:layout_height="80dp"
                android:layout_weight="1">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/title"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/semester"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lastUpdate"
                    android:textSize="14sp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="200dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <android.support.v7.widget.CardView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="match_parent"
                        android:id="@+id/grades"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="10dp"
                        android:layout_width="150dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            app:srcCompat="@drawable/ic_grades"
                            android:id="@+id/imageView14"
                            android:scaleType="fitXY"
                            android:cropToPadding="false"
                            android:adjustViewBounds="false"
                            android:layout_height="match_parent" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:text="Grades"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:id="@+id/textView1"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="20sp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/exelent"
                        android:textAllCaps="true" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <android.support.v7.widget.CardView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="match_parent"
                        android:id="@+id/summary"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="10dp"
                        android:layout_width="150dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:id="@+id/imageView10"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_summary"
                            android:scaleType="fitXY" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:text="Summary"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:id="@+id/textView2"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="20sp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/exelent"
                        android:textAllCaps="true" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="200dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <android.support.v7.widget.CardView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="match_parent"
                        android:id="@+id/analysis"
                        android:layout_margin="10dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="10dp"
                        android:layout_width="150dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:id="@+id/imageView11"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_analysis"
                            android:scaleType="fitXY" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:text="Charts"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:id="@+id/textView3"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="20sp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/exelent"
                        android:textAllCaps="true" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <android.support.v7.widget.CardView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="match_parent"
                        android:id="@+id/archive"
                        android:layout_margin="10dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="10dp"
                        android:layout_width="150dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:id="@+id/imageView13"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_archive"
                            android:scaleType="fitXY" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:text="Archive"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:id="@+id/textView4"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="20sp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/exelent"
                        android:textAllCaps="true" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_height="200dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <android.support.v7.widget.CardView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="match_parent"
                        android:id="@+id/settings"
                        android:layout_margin="10dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="10dp"
                        android:layout_width="150dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:id="@+id/imageView"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_settings"
                            android:scaleType="fitXY" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:text="Settings"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:id="@+id/textView5"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="20sp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/exelent"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <android.support.v7.widget.CardView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="match_parent"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="10dp"
                        android:id="@+id/help"
                        android:layout_marginLeft="15dp"
                        android:layout_margin="10dp"
                        android:layout_width="150dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_help"
                            android:id="@+id/imageView15"
                            android:scaleType="fitXY"
                            android:layout_weight="1" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:text="Help"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:id="@+id/textView6"
                        android:layout_weight="1"
                        android:gravity="bottom|center_horizontal"
                        android:textSize="20sp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/exelent"
                        android:textAllCaps="true" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
