<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EEEEEE">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:text="Exam Grade List"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/textView9"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="@drawable/dashboard"
            android:padding="10dp"
            android:elevation="1dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="Selected Subject: CP1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/displaySubject"
                            android:textSize="14sp"
                            android:layout_marginLeft="5dp" />

                        <TextView
                            android:text="Total Student: 30"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/displayStudentCount"
                            android:textSize="14sp"
                            android:layout_marginLeft="5dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                app:cardBackgroundColor="@color/btnColor"
                app:cardElevation="5dp"
                app:cardCornerRadius="15dp"
                app:contentPadding="5dp"
                android:hapticFeedbackEnabled="false"
                android:layout_margin="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal">

                    <ImageView
                        app:srcCompat="@drawable/ic_plus_circle_outline"
                        android:id="@+id/imageView7"
                        android:scaleType="fitXY"
                        android:layout_height="25dp"
                        android:layout_width="25dp" />

                    <TextView
                        android:text="Add Grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/addText"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/gradeList"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp" />

    </LinearLayout>
</RelativeLayout>